<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="netcents_gateway" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>NetCents</label>

                <comment>
                    <![CDATA[Accept payments with Master Card, Visa. <a href="https://merchant.net-cents.com/" target="_blank">Click here to sign up for a NetCents account</a>]]>
                </comment>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="test_mode" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Test Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="live_api_key" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Live API Key</label>
                </field>
                <field id="live_secret_key" translate="label" type="text" sortOrder="41" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Live Secret Key</label>
                </field>
                <field id="test_api_key" translate="label" type="text" sortOrder="42" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sandbox API Key</label>
                </field>
                <field id="test_secret_key" translate="label" type="text" sortOrder="43" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sandbox Secret Key</label>
                </field>
                <field id="image" translate="label" type="text" sortOrder="44" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Checkout Image URL</label>
                </field>
                <field id="description" translate="label" type="text" sortOrder="44" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment Description</label>
                </field>
            </group>
        </section>
    </system>
</config>
